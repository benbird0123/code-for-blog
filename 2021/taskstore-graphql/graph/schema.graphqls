type Query {
    getAllTasks: [Task]
    getTask(id: ID!): Task
}

type Mutation {
    createTask(input: NewTask!): Task!

    deleteTask(id: ID!): Boolean
    deleteAllTasks: Boolean
}

scalar Time

type Task {
    Id: ID!
    Text: String!
    Tags: [String!]
    Due: Time!
}

input NewTask {
    Text: String!
    Tags: [String!]
    Due: Time!
}
